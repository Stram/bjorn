{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],

    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "Node",

    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "*"]
    }
  }
}
