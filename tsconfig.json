{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "ES2017",
    "module": "es2015",
    "moduleResolution": "node",
    "allowJs": true,

    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "*"]
    }
  }
}
